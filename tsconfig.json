{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES5",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "outDir": ".tmp"
  },
  "filesGlob": [
    "!node_modules",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "src/bundle.ts",
    "src/components/collapse/collapse.ts",
    "src/components/collapsible-text/collapsible-text.ts",
    "src/components/dropdown/dropdown.ts",
    "src/components/flyout/class.flyout.ts",
    "src/components/flyout/flyout.ts",
    "src/customizations/brand-carousel/brand-carousel.ts",
    "src/customizations/hero/hero.ts",
    "src/customizations/image-teaser/image-teaser.ts",
    "src/customizations/items-grid-layout/items-grid-layout.ts",
    "src/customizations/navigation/navigation.ts",
    "src/customizations/offcanvas-navigation/content-setter.ts",
    "src/customizations/offcanvas-navigation/offcanvas-navigation.ts",
    "src/customizations/offcanvas/offcanvas.ts",
    "src/customizations/products-promo/products-promo.ts",
    "src/customizations/qty-increment/qty-increment.ts",
    "src/customizations/reviews/reviews.ts",
    "src/customizations/select/select.ts",
    "src/customizations/sticky-block/sticky-block.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
