<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" 
                   name="cms_page.ajax.atc.init"
                   template="Magento_Cms::ajax-addtocart-init.phtml" 
                   after="-" />
        </referenceContainer>

        <referenceContainer name="main.content" htmlClass="cs-container cs-container--cms-page">
            <container name="page.main.container.inner" htmlTag="div" htmlClass="cs-container__inner"/>
        </referenceContainer>
        <move element="columns.top" destination="page.main.container.inner" after="-"/>
        <move element="columns" destination="page.main.container.inner" after="-"/>
    </body>
</page>
