<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block name="cms.canonical" class="Magento\Framework\View\Element\Template" template="Magento_Cms::canonical-cms.phtml" before="styles"/>
        </referenceBlock>

        <referenceContainer name="main.content">
            <container name="hidden.cms.page.title" htmlTag="div" htmlClass="cs-visually-hidden" before="-">
                <block class="Magento\Theme\Block\Html\Title" name="page.main.title.hidden" template="html/title.phtml" before="-"/>
            </container>
        </referenceContainer>

    </body>
</page>

