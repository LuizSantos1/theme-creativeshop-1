<?php
$brandCollection = $this->getBrandCollection();
$data = $this->helper('Ves\Brand\Helper\Data');
$brand_layout_listing = $data->getConfig("product_view_page/brand_layout_listing");
$brand_label = $data->getConfig("product_view_page/brand_text");
$show_brand_image = $data->getConfig("product_view_page/show_brand_image");
$show_brand_name = $data->getConfig("product_view_page/show_brand_name");
?>

<?php if($brandCollection && $brandCollection->count()){ ?>
	<?php
		$i = 0;
		$total = $brandCollection->count();

		if($data->getConfig("product_view_page/show_brand_text") && $brand_label){
			echo '<span class="brand-label">'.$brand_label.'</span>';
		}
	?>

	<?php if($brand_layout_listing) { ?>

		<ul class="product-brands">
			<?php foreach ($brandCollection as $_brand) { ?>
				<li class="brand-item">
					<?php if($show_brand_image): ?>
						<a href="<?php echo $_brand->getUrl(); ?>" title="<?php echo $_brand->getName(); ?>">
							<img src="<?php echo $_brand->getThumbnailUrl(); ?>" alt="<?php echo $_brand->getName(); ?>"/>
						</a>
					<?php endif; ?>

					<?php if($show_brand_name): ?>
						<a href="<?php echo $_brand->getUrl(); ?>" title="<?php echo $_brand->getName(); ?>">
							<span itemprop="brand"><?php echo $_brand->getName(); ?></span>
						</a>
					<?php endif; ?>
				</li>
			<?php } ?>
		</ul>

	<?php } else {

		foreach ($brandCollection as $_brand) { ?>
			<div class="cs-product-info-brand">
				<?php if($show_brand_image): ?>
					<div class="cs-product-info-brand__row">
						<a class="cs-product-info-brand__name" href="<?php echo $_brand->getUrl(); ?>" title="<?php echo $_brand->getName(); ?>">
							<img class="cs-product-info-brand__logo"src="<?php echo $_brand->getThumbnailUrl(); ?>" alt="<?php echo $_brand->getName(); ?>"/>
						</a>
					</div>
				<?php endif; ?>

				<?php if($show_brand_name): ?>
					<div class="cs-product-info-brand__row">
						<a class="cs-product-info-brand__name" href="<?php echo $_brand->getUrl(); ?>" title="<?php echo $_brand->getName(); ?>"<?php if($show_brand_image): ?> rel="nofollow"<?php endif;?>>
							<span itemprop="brand"><?php echo $_brand->getName(); ?></span>
						</a>
					</div>
				<?php endif; ?>
			</div>
			<?php if($i<=($total-2)){ echo ', '; }  ?>
			<?php $i++; ?>
	 <?php 
		}
	} 
	?>
<?php } ?>
