<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Creativestyle\FrontendExtension\Block\Graph\OpenGraph" name="opengraph.category"
                   template="Magento_Theme::opengraph/category.phtml" after="cms.canonical">
            </block>
        </referenceBlock>
        <referenceContainer name="columns" htmlClass="columns | cs-category-page"/>

        <move element="page.messages" destination="main" before="-" />

        <referenceBlock name="category.products.list" as="product_list" >
        <container name="category.page.title" as="page.title" >
            <block class="Magento\Theme\Block\Html\Title" name="page.main.title" template="Magento_Theme::html/pure-title.phtml"/>
        </container>
        </referenceBlock>

        <move element="page.main.title" destination="category.page.title"/>

        <move element="div.sidebar.additional" destination="sidebar.main" after="-"/>

        <move element="category.description" destination="content" after="-" />
        <move element="category.cms" destination="content" after="-" />

    </body>
</page>
