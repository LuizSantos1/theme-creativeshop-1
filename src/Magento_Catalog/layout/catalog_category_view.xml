<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns" htmlClass="columns | cs-category-page"/>

        <move element="page.messages" destination="main" before="-" />

        <referenceBlock  name="category.products.list">
            <container name="category.product.list.title" htmlTag="div" as="page.title" before="-" />
        </referenceBlock>

        <referenceBlock name="page.main.title">
            <block class="Magento\Catalog\Block\Product\ListProduct" name="title.products.amount" template="Magento_Catalog::product/list/amount.phtml"/>
        </referenceBlock>

        <move element="page.main.title" destination="category.product.list.title" before="-"/>

        <move element="div.sidebar.additional" destination="sidebar.main" after="-"/>

        <move element="category.description" destination="content" after="-" />
        <move element="category.cms" destination="content" after="-" />

    </body>
</page>
