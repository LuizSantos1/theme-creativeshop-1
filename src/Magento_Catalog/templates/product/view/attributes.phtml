                    </dt>
                    <dd class="cs-attributes-list__item">
                        <?php /* @escapeNotVerified */ echo $_helper->productAttribute($_product, $_data['value'], $_data['code']) ?>
                    </dd>
                <?php endforeach; ?>
            </dl>
        </div>
    </div>

    <button class="cs-button cs-button--look_light cs-button--size_300 | cs-collapsible-text__trigger js-collapsible-text-trigger" data-show-less-text="<?php /* @escapeNotVerified */ echo __('Less information'); ?>" data-show-more-text="<?php /* @escapeNotVerified */ echo __('More information'); ?>">
         <span class="cs-button__span"><?php /* @escapeNotVerified */ echo __('More information'); ?></span>
        <svg class="cs-button__icon">
            <use xlink:href="#arrow_next"></use>
        </svg>
    </button>
</div>
<?php endif;?>
