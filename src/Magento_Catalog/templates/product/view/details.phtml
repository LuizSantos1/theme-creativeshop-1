?>
<?php if ($detailedInfoGroup = $block->getGroupChildNames('detailed_info', 'getChildHtml')):?>

    <?php
    $layout = $block->getLayout();
    ?>

    <?php foreach ($detailedInfoGroup as $name): ?>
        <?php
        $html = $layout->renderElement($name);
        if (!trim($html)) {
            continue;
        }
        $alias = $layout->getElementAlias($name);
        $label = $block->getChildData($alias, 'title');
        ?>
        <div class="cs-product-description__item | cs-collapse cs-collapse--only-mobile<?php if($name == 'reviews.tab'): ?> cs-product-description__item--reviews<?php endif;?><?php if($name == 'product.attributes'): ?> cs-product-description__item--penultimate<?php endif;?>">
            <?php if($name == 'reviews.tab'): ?>
                <div class="cs-product-description__item--reviews__inner">
                    <div class="cs-product-description__item--reviews__column">
            <?php endif;?>
                        <h2 class="cs-product-description__headline | cs-t-headline cs-t-headline--size_2 | cs-collapse__trigger"><?php /* @escapeNotVerified */
                            echo $label; ?></h2>

                        <div class="cs-collapse__content | cs-cms-block">
                            <div class="cs-product-description__content">
                                <?php /* @escapeNotVerified */
                                echo $html; ?>
                            </div>
                        </div>
            <?php if($name == 'reviews.tab'): ?>
                    </div>
                </div>
            <?php endif;?>
        </div>
    <?php endforeach; ?>
<?php endif; ?>
