<?php
$collection = $block->getItems();

if (!empty($collection)): ?>
    <ul class="cs-footer-socials">
        <?php foreach ($collection as $item):
            if (!empty($item['url'])): ?>
                <li class="cs-footer-socials__item <?= $item['additional_css_classes'] ?>">
                    <a href="<?= $item['url'] ?>" class="cs-footer-socials__link">
                        <?php if(!empty($item['icon'])): ?>
                            <?= $this->getLayout()
                                   ->createBlock('MageSuite\ThemeHelpers\Block\Icon')
                                   ->setIconUrl($item['icon'])
                                   ->setCssClass('cs-footer-socials__icon')
                                   ->setAltText($item['icon_alt_text'])
                                   ->setInlined(true)
                                   ->setLazyLoaded(true)
                                   ->toHtml();
                            ?>
                        <?php endif ?>

                        <?php if(!empty($item['label'])): ?>
                            <span class="cs-footer-socials__label<?= $item['hide_label'] ? ' cs-visually-hidden' : '' ?>"><?= $item['label'] ?></span>
                        <?php endif; ?>
                    </a>
                </li>
            <?php endif; ?>
        <?php endforeach ?>
    </ul>
<?php endif; ?>
