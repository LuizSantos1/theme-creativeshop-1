<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>

        <referenceContainer name="dashboard.bottom.wishlist" remove="true"/>

        <referenceContainer name="content">

            <referenceBlock class="Magento\Wishlist\Block\Customer\Wishlist\Item\Column\Actions" name="customer.wishlist.item.actions" template="item/column/actions.phtml" cacheable="false">
                <arguments>
                    <argument name="css_class" xsi:type="string">cs-grid-product__links</argument>
                </arguments>
            </referenceBlock>

        </referenceContainer>
    </body>
</page>
