/** @var \Magento\Wishlist\Block\Customer\Wishlist\Items $block */
$columns = $block->getColumns();
?>

<div class="cs-wishlist__products-grid">
    <?php $iterator = 1; ?>
    <?php if (count($block->getItems())): ?>
        <ol class="cs-items-grid">
            <?php foreach ($block->getItems() as $item): ?>
                <?php /* @escapeNotVerified */
                echo ($iterator++ == 1) ? '<li data-row="product-item" class="cs-items-grid__item cs-items-grid__item--padding" id="item_' . $item->getId() . '">' : '</li>
<li class="cs-items-grid__item cs-items-grid__item--padding " id="item_' . $item->getId() . '">' ?>
                <div class="cs-grid-product cs-grid-product--no-scale">
                    <?php foreach ($columns as $column): ?>
                        <?php $column->setItem($item);
                        echo $column->toHtml($item); ?>
                    <?php endforeach; ?>
                </div>
                <?php echo ($iterator == count($block->getItems()) + 1) ? '</li>' : '' ?>
            <?php endforeach; ?>
        </ol>
    <?php else: ?>
        <div class="cs-wishlist__line">
            <span><?php /* @escapeNotVerified */
                echo __('This Wish List has no Items'); ?></span>
        </div>
    <?php endif; ?>
</div>

<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml(); ?>
<?php endforeach; ?>
