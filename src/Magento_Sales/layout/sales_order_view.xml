<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <update handle="sales_order_item_renderers"/>
    <update handle="sales_order_item_price"/>
    <update handle="sales_order_info_links"/>
    <body>

        <referenceBlock name="sales.order.info.links.information">
            <arguments>
                <argument name="path" xsi:type="string">sales/order/view</argument>
                <argument name="label" xsi:type="string" translate="true">Order details</argument>
            </arguments>
        </referenceBlock>

        <move element="order.status" destination="order.attributes.inner"/>
        <move element="order.date" destination="order.attributes.inner"/>

        <move element="page.main.title" destination="content" before="-"/>

        <move element="order.actions.container" destination="page.main.title" after="-"/>

        <referenceBlock name="sales.order.info.buttons">
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="sales.order.info.button.icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/button/icon-default-primary.svg</argument>
                    <argument name="css_class" xsi:type="string">cs-info-block__button-icon</argument>
                    <argument name="alt_text" xsi:type="string" translate="true"></argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
