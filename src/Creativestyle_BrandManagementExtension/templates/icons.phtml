<?php

/** @var \Creativestyle\BrandManagementExtension\Block\All $block */
$brands = $block->getAllBrands();

?>
<div class="cs-brands-container__icons">
    <div class="cs-brands-container__icons-wrapper">
        <?php foreach ($brands as $brand): ?>
            <?php if(!empty($brand->getBrandIconUrl()) and $brand->getIsFeatured()): ?>
                <a class="cs-brands-container__icon" href="<?php echo $brand->getBrandUrl()?>" target="_blank">
                    <img class="cs-brands-container__img" src="<?php echo $brand->getBrandIconUrl()?>" alt="<?php echo $brand->getBrandName()?>">
                </a>
            <?php endif; ?>
        <?php endforeach;?>
    </div>
</div>
