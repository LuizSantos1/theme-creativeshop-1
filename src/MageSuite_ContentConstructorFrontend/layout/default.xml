<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>        
        <referenceContainer name="page.wrapper"> 
            <container name="footer.usps.container" htmlTag="div" htmlClass="cs-container cs-container--usps" before="footer-container">
                <container name="footer.usps.container.inner" htmlTag="div" htmlClass="cs-container__inner">
                    <block class="MageSuite\ContentConstructorFrontend\Block\Component" name="footer.usps.headline">
                        <arguments>
                            <argument xsi:type="string" name="type">headline</argument>
                            <argument xsi:type="string" name="section">content</argument>
                            <argument xsi:type="array" name="data">
                                <item name="title" xsi:type="string" translate="true">We are the right partner for you</item>
                                <item name="subtitle" xsi:type="string" translate="true">This is why</item>
                                <item name="headingTag" xsi:type="string">h4</item>
                                <item name="componentVisibility" xsi:type="array">
                                    <item name="mobile" xsi:type="string">1</item>
                                    <item name="desktop" xsi:type="string">1</item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                    <block class="Magento\Framework\View\Element\Template" name="footer.usps" template="MageSuite_ContentConstructorFrontend::usps.phtml">
                        <arguments>
                            <argument xsi:type="string" name="type">image-teaser</argument>
                            <argument xsi:type="string" name="section">content</argument>
                            <argument xsi:type="array" name="data">
                                <item name="customRender" xsi:type="boolean">true</item>
                                <item name="mix" xsi:type="string">cs-image-teaser--usps</item>
                                <item name="items" xsi:type="array">
                                    <item name="0" xsi:type="array">
                                        <item name="display" xsi:type="boolean">true</item>
                                        <item name="decodedImage" xsi:type="string">MageSuite_ContentConstructorFrontend::images/usp-1.svg</item>
                                        <item name="colorScheme" xsi:type="string">dark</item>
                                        <item name="headline" xsi:type="string" translate="true">Free Shipping</item>
                                        <item name="paragraph" xsi:type="string" translate="true">We will deliver your order without any cost</item>
                                        <item name="href" xsi:type="string"></item>
                                    </item>
                                    <item name="1" xsi:type="array">
                                        <item name="display" xsi:type="boolean">true</item>
                                        <item name="decodedImage" xsi:type="string">MageSuite_ContentConstructorFrontend::images/usp-2.svg</item>
                                        <item name="colorScheme" xsi:type="string">dark</item>
                                        <item name="headline" xsi:type="string" translate="true">Safe packing</item>
                                        <item name="paragraph" xsi:type="string" translate="true">All packages are safely packed with durable boxes</item>
                                        <item name="href" xsi:type="string"></item>
                                    </item>
                                    <item name="2" xsi:type="array">
                                        <item name="display" xsi:type="boolean">true</item>
                                        <item name="decodedImage" xsi:type="string">MageSuite_ContentConstructorFrontend::images/usp-3.svg</item>
                                        <item name="colorScheme" xsi:type="string">dark</item>
                                        <item name="headline" xsi:type="string" translate="true">Support</item>
                                        <item name="paragraph" xsi:type="string" translate="true">If you have any question or need help just contact us</item>
                                        <item name="href" xsi:type="string"></item>
                                    </item>
                                    <item name="3" xsi:type="array">
                                        <item name="display" xsi:type="boolean">true</item>
                                        <item name="decodedImage" xsi:type="string">MageSuite_ContentConstructorFrontend::images/usp-4.svg</item>
                                        <item name="colorScheme" xsi:type="string">dark</item>
                                        <item name="headline" xsi:type="string" translate="true">Always on time</item>
                                        <item name="paragraph" xsi:type="string" translate="true">Select fast delivery service for 24h shipment</item>
                                        <item name="href" xsi:type="string"></item>
                                    </item>
                                    <item name="4" xsi:type="array">
                                        <item name="display" xsi:type="boolean">true</item>
                                        <item name="decodedImage" xsi:type="string">MageSuite_ContentConstructorFrontend::images/usp-5.svg</item>
                                        <item name="colorScheme" xsi:type="string">dark</item>
                                        <item name="headline" xsi:type="string" translate="true">Service</item>
                                        <item name="paragraph" xsi:type="string" translate="true">All our products have 2 years warranty service provided by our store</item>
                                        <item name="href" xsi:type="string"></item>
                                    </item>
                                    <item name="5" xsi:type="array">
                                        <item name="display" xsi:type="boolean">true</item>
                                        <item name="decodedImage" xsi:type="string">MageSuite_ContentConstructorFrontend::images/usp-6.svg</item>
                                        <item name="colorScheme" xsi:type="string">dark</item>
                                        <item name="headline" xsi:type="string" translate="true">Measurement on site</item>
                                        <item name="paragraph" xsi:type="string" translate="true">Not sure what size to choose? Contact us, we will fit your needs</item>
                                        <item name="href" xsi:type="string"></item>
                                    </item>
                                </item>
                                <item name="currentScenario" xsi:type="array">
                                    <item name="teaserWidth" xsi:type="array">
                                        <item name="id" xsi:type="string">c</item>
                                    </item>
                                    <item name="desktopLayout" xsi:type="array">
                                        <item name="id" xsi:type="string">6</item>
                                    </item>
                                    <item name="textPositioning" xsi:type="array">
                                        <item name="id" xsi:type="string">under</item>
                                    </item>
                                    <item name="mobileLayout" xsi:type="array">
                                        <item name="id" xsi:type="string">slider</item>
                                    </item>
                                </item>
                                <item name="componentVisibility" xsi:type="array">
                                    <item name="mobile" xsi:type="string">1</item>
                                    <item name="desktop" xsi:type="string">1</item>
                                </item>
                                <item name="jsConfig" xsi:type="array">
                                    <item name="loop" xsi:type="boolean">false</item>
                                    <item name="carouselBreakpoint" xsi:type="number">1023</item>
                                    <item name="slidesPerView" xsi:type="number">6</item>
                                    <item name="slidesPerGroup" xsi:type="number">6</item>
                                    <item name="breakpoints" xsi:type="array">
                                        <item name="479" xsi:type="array">
                                            <item name="slidesPerView" xsi:type="number">1</item>
                                            <item name="slidesPerGroup" xsi:type="number">1</item>
                                        </item>
                                        <item name="639" xsi:type="array">
                                            <item name="slidesPerView" xsi:type="number">2</item>
                                            <item name="slidesPerGroup" xsi:type="number">2</item>
                                        </item>
                                        <item name="1023" xsi:type="array">
                                            <item name="slidesPerView" xsi:type="number">3</item>
                                            <item name="slidesPerGroup" xsi:type="number">3</item>
                                        </item>
                                    </item>
                                </item>
                            </argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
