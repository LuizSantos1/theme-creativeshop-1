<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <vars module="MageSuite_ContentConstructor">
        <var name="columns">
            <var name="default_layout">multiple-columns</var>
            <var name="one-column">
                <var name="phone">1</var>
                <var name="phoneLg">2</var>
                <var name="tablet">3</var>
                <var name="laptop">4</var>
                <var name="laptopLg">4</var>
                <var name="desktop">4</var>
                <var name="tv">4</var>
            </var>
            <var name="multiple-columns">
                <var name="phone">1</var>
                <var name="phoneLg">2</var>
                <var name="tablet">2</var>
                <var name="laptop">3</var>
                <var name="laptopLg">3</var>
                <var name="desktop">3</var>
                <var name="tv">3</var>
            </var>
        </var>
        <var name="sections">
            <var name="cms_page_form.cms_page_form">
                <var name="0">content</var>
            </var>
            <var name="product_form.product_form">
                <var name="0">cc-content</var>
            </var>
            <var name="category_form.category_form">
                <var name="0">cc-top</var>
                <var name="1">grid</var>
                <var name="2">cc-bottom</var>
            </var>
            <var name="brands_edit_form.brands_edit_form">
                <var name="0">cc-top</var>
                <var name="1">grid</var>
                <var name="2">cc-bottom</var>
            </var>
            <var name="defaults">
                <var name="cms_page_form.cms_page_form">content</var>
                <var name="product_form.product_form">cc-content</var>
                <var name="category_form.category_form">grid</var>
                <var name="brands_edit_form.brands_edit_form">grid</var>
            </var>
        </var>
        <var name="special_components">
            <var name="0">magento-product-grid-teasers</var>
        </var>
        <var name="filters">
            <var name="component_visibility">
                <var name="icon">#icon_eye</var>
                <var name="title">Storefront visibility</var>
                <var name="options">
                    <var name="mobile">
                        <var name="label">Mobile</var>
                        <var name="value">true</var>
                    </var>
                    <var name="desktop">
                        <var name="label">Desktop</var>
                        <var name="value">true</var>
                    </var>
                    <var name="none">
                        <var name="label">Not visible</var>
                        <var name="value">true</var>
                    </var>
                </var>
            </var>
        </var>
        <var name="image_teasers_content_positions">
            <var name="0">Text vertically centered on the left</var>
            <var name="1">Text on the bottom, left corner</var>
            <var name="2">Text vertically centered in the middle</var>
            <var name="3">Text on the bottom - centered</var>
        </var>
    </vars>

    <vars module="MageSuite_ContentConstructorFrontend">
        <var name="component_hidden_classes">
            <var name="mobile">cs-display-controller--hidden-mobile</var>
            <var name="desktop">cs-display-controller--hidden-desktop</var>
        </var>
        <var name="max_content_width">1200</var>
        <var name="brand_carousel">
            <var name="additional_css_classes"></var>
            <var name="lazyload_brand_images">true</var>
            <var name="link_brands">true</var>
            <var name="pagination">
                <var name="show">true</var>
                <var  name="additional_css_classes">cs-hide-tablet-desktop</var>
            </var>
            <var name="navigation">
                <var name="show">true</var>
                <var name="arrows">
                    <var name="prev">
                        <var  name="additional_css_classes">cs-hide-mobile</var>
                        <var name="path">#icon_arrow-left</var>
                    </var>
                    <var name="next">
                        <var  name="additional_css_classes">cs-hide-mobile</var>
                        <var name="path">#icon_arrow-right</var>
                    </var>
                </var>
            </var>
        </var>
        <var name="button">
            <var name="additional_css_classes"></var>
            <var name="icon_path">#arrow_next</var>
        </var>
        <var name="category_links">
            <var name="additional_css_classes"></var>
            <var name="show_title">true</var>
            <var name="hide_links_breakpoints">
                <var name="tablet">
                    <var name="additional_css_classes">cs-hide-tablet</var>
                    <var name="hide_from">5</var>
                </var>
                <var name="desktop">
                    <var  name="additional_css_classes">cs-hide-laptop</var>
                    <var name="hide_from">7</var>
                </var>
            </var>
            <var name="all_products">
                <var name="label">All Products</var>
                <var name="icon">#icon_arrow-right</var>
            </var>
        </var>
        <var name="cms_teaser">
            <var name="additional_css_classes"></var>
            <var name="pagination">
                <var name="show">true</var>
                <var name="additional_css_classes">cs-hide-tablet-desktop</var>
            </var>
            <var name="navigation">
                <var name="show">true</var>
                <var name="arrows">
                    <var name="prev">
                        <var name="additional_css_classes">cs-hide-mobile</var>
                        <var name="path">#icon_arrow-left</var>
                    </var>
                    <var name="next">
                        <var name="additional_css_classes">cs-hide-mobile</var>
                        <var name="path">#icon_arrow-right</var>
                    </var>
                </var>
            </var>
            <var name="cta_button_icon_path">#arrow_next</var>
        </var>
        <var name="daily_deal_teaser">
            <var name="additional_css_classes"></var>
            <var name="lazyload_image">true</var>
            <var name="slogan">
                <var name="show">true</var>
                <var name="icon_path">#clock</var>
            </var>
            <var name="show_brand">true</var>
            <var name="show_rating">true</var>
            <var name="show_available_amount_section">true</var>
            <var name="addtocart_button">
                <var name="show">true</var>
                <var name="icon_path">#arrow_next</var>
            </var>
            <var name="discount_badge">
                <var name="show">true</var>
                <var name="show_sale_label">false</var>
                <var name="show_percentage">true</var>
                <var name="prefix">-</var>
                <var name="suffix">%</var>
            </var>
            <var name="expired_notice">
                <var name="show">false</var>
                <var name="content"></var>
            </var>
        </var>
        <var name="headline">
            <var name="additional_css_classes"></var>
        </var>
        <var name="hero_carousel">
            <var name="additional_css_classes">cs-hero--centered</var>
            <var name="sizes">(max-width: 48em) 100vw, (max-width: 1200px) 80vw, 960px</var>
            <var name="pagination">
                <var name="show">true</var>
                <var name="additional_css_classes"></var>
            </var>
            <var name="navigation">
                <var name="show">true</var>
                <var name="arrows">
                    <var name="prev">
                        <var name="additional_css_classes">cs-hide-mobile cs-hero__nav--large</var>
                        <var name="path">#icon_arrow-left</var>
                    </var>
                    <var name="next">
                        <var name="additional_css_classes">cs-hide-mobile cs-hero__nav--large</var>
                        <var name="path">#icon_arrow-right</var>
                    </var>
                </var>
            </var>
            <var name="cta_button_icon_path">#arrow_next</var>
        </var>
        <var name="image_teaser">
            <var name="additional_css_classes"></var>
            <var name="pagination">
                <var name="show">true</var>
                <var name="additional_css_classes"></var>
            </var>
            <var name="navigation">
                <var name="show">true</var>
                <var name="arrows">
                    <var name="prev">
                        <var name="additional_css_classes">cs-hide-mobile</var>
                        <var name="path">#icon_arrow-left</var>
                    </var>
                    <var name="next">
                        <var name="additional_css_classes">cs-hide-mobile</var>
                        <var name="path">#icon_arrow-right</var>
                    </var>
                </var>
            </var>
            <var name="cta_button_icon_path">#arrow_next</var>
        </var>
        <var name="paragraph">
            <var name="additional_css_classes"></var>
        </var>
        <var name="product_carousel">
            <var name="navigation">
                <var name="show">true</var>
                <var name="arrows">
                    <var name="prev">
                        <var name="additional_css_classes"></var>
                        <var name="path">#icon_arrow-left</var>
                    </var>
                    <var name="next">
                        <var name="additional_css_classes"></var>
                        <var name="path">#icon_arrow-right</var>
                    </var>
                </var>
            </var>
        </var>
        <var name="product_finder">
            <var name="additional_css_classes"></var>
            <var name="button_icon_path">#arrow_next</var>
        </var>
        <var name="product_grid">
            <var name="additional_css_classes"></var>
            <var name="lazyload_heros_images">true</var>
            <var name="teasers_configuration">
                <var name="id">1</var>
                <var name="mobile">false</var>
                <var name="size">
                    <var name="x">2</var>
                    <var name="y">1</var>
                </var>
            </var>
            <var name="cta_button_icon_path">#arrow_next</var>
        </var>
        <var name="separator">
            <var name="additional_css_classes"></var>
        </var>
        <var name="static_block">
            <var name="additional_css_classes"></var>
        </var>
    </vars>

    <vars module="Magento_Theme">
        <var name="toolbar">
            <var name="pagination">
                <!-- You can decide about pagination mode (text input / bullet points) in admin panel (Stores -> Configuration -> MAGESUITE -> Pagination). Define 'catalog_category_view' to use input mode or remove it to use bullet points on category pages. You can decide on this mode 'per page' by manipulating other handlers in this way. -->
                <var name="display">true</var>
                <var name="prefix_label">Page:</var>
                <var name="display_prev_next_buttons_if_disabled">true</var>
                <var name="display_prev_next_labels">false</var>
                <!-- if last_page_separator will be left empty, it will display as '/'. The reason is that we don't want to put it as translateable string -->
                <var name="last_page_separator"></var>
                <var name="icons">
                    <var name="previous_page">Magento_Theme::images/pagination-previous-page.svg</var>
                    <var name="next_page">Magento_Theme::images/pagination-next-page.svg</var>
                </var>
            </var>
        </var>
    </vars>

    <vars module="Magento_Catalog">
        <!-- configures toolbar elements (except of pagination, which is in Magento_Theme vars as it's global component) -->
        <var name="toolbar">
            <var name="amount">
                <var name="display">false</var>
            </var>
            <var name="sorter">
                <var name="display">true</var>
                <var name="label">Sort by:</var>
                <var name="display_sort_direction_label">false</var>
                <!-- Currently we use MageSuite_Sorting that changed logic of sorting dropdown and no icons are displayed at all. If you want them back you have to uninstall Sorting extention -->
                <var name="icons">
                    <var name="order_asc">Magento_Catalog::images/asc-order-icon.svg</var>
                    <var name="order_desc">Magento_Catalog::images/desc-order-icon.svg</var>
                </var>
            </var>
            <var name="limiter">
                <var name="display">true</var>
                <var name="prefix_label">Display:</var>
                <var name="suffix_label"></var>
                <var name="as_select">false</var>
            </var>
            <var name="viewmode_switcher">
                <var name="display">false</var>
                <var name="prefix_label"></var>
                <var name="display_modes_icons">true</var>
                <var name="display_modes_labels">false</var>
            </var>
        </var>

        <!-- Defines if Adding to cart should be done with AJAX on specific pages -->
        <var name="ajax_addtocart">
            <var name="tiles">true</var>
        </var>

        <!-- Gallery and magnifier theme settings. Start -->
        <var name="gallery">
            <var name="nav">.thumbs</var>
            <!-- Gallery navigation style (false/thumbs/dots) -->
            <var name="loop">true</var>
            <!-- Gallery navigation loop (true/false) -->
            <var name="keyboard">true</var>
            <!-- Turn on/off keyboard arrows navigation (true/false) -->
            <var name="arrows">true</var>
            <!-- Turn on/off arrows on the sides preview (true/false) -->
            <var name="caption">false</var>
            <!-- Display alt text as image title (true/false) -->
            <var name="allowfullscreen">true</var>
            <!-- Turn on/off fullscreen (true/false) -->
            <var name="navdir">vertical</var>
            <!-- Sliding direction of thumbnails (horizontal/vertical) -->
            <var name="navarrows">true</var>
            <!-- Turn on/off on the thumbs navigation sides arrows(true/false) -->
            <var name="navtype">slides</var>
            <!-- Sliding type of thumbnails (slides/thumbs) -->
            <var name="transition">
                <var name="effect">slide</var>
                <!-- Sets transition effect for slides changing (slide/crossfade/dissolve) -->
                <var name="duration">500</var>
                <!-- Sets transition duration in ms -->
            </var>
            <var name="maxheight">500px</var>
            <!-- Sets max gallery height -->
            <var name="thumbmargin">12</var>
            <!-- Sets margin between thumbnails -->
            <var name="fullscreen">
                <var name="nav">thumbs</var>
                <!-- Fullscreen navigation style (false/thumbs/dots) -->
                <var name="loop">true</var>
                <!-- Fullscreen navigation loop (true/false/null) -->
                <var name="arrows">false</var>
                <!-- Turn on/off arrows on the sides preview in fullscreen (true/false/null) -->
                <var name="caption">false</var>
                <!-- Display alt text as image title in fullscreen(true/false) -->
                <var name="navdir">horizontal</var>
                <!--Sliding direction of thumbnails in fullscreen(horizontal/vertical)  -->
                <var name="navarrows">false</var>
                <!-- Turn on/off on the thumbs navigation sides arrows(true/false) -->
                <var name="navtype">slides</var>
                <!-- Sliding type of thumbnails (slides/thumbs) -->
                <var name="transition">
                    <var name="effect">slide</var>
                    <!-- Sets transition effect for slides changing (slide/crossfade/dissolve) -->
                    <var name="duration">500</var>
                    <!-- Sets transition duration in ms -->
                </var>
            </var>
        </var>
    </vars>
    <media>
        <images module="Magento_Catalog">
            <image id="category_page_grid" type="small_image">
                <width>260</width>
                <height>270</height>
            </image>
            <image id="category_page_grid_x2" type="small_image">
                <width>520</width>
                <height>540</height>
            </image>
            <image id="related_products_list" type="small_image">
                <width>240</width>
                <height>300</height>
            </image>
            <image id="upsell_products_list" type="small_image">
                <width>240</width>
                <height>300</height>
            </image>
            <image id="product_page_image_large_no_frame" type="image">
                <width>700</width>
                <height>700</height>
                <frame>false</frame>
            </image>
        </images>
    </media>
</view>
