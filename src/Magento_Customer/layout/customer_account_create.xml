<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">create-account</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Create an account</item>
                    <item name="label" xsi:type="string" translate="true">Create an account</item>
                </argument>
            </action>
        </referenceBlock>

        <referenceContainer name="main.content" htmlClass="cs-container cs-container--create-account-page"/>

        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">page-title-wrapper--checkout-type</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="customer_form_register">
            <arguments>
                <argument name="password_strength_icon" xsi:type="string">#password-strength-meter-icon</argument>
            </arguments>
            <block class="MageSuite\ThemeHelpers\Block\Icon" name="account_create.password-strength-meter-icon">
                <arguments>
                    <argument name="icon_url" xsi:type="string">images/icons/forms/icon-password-strength-meter.svg</argument>
                    <argument name="css_class" xsi:type="string">password-strength-meter__icon</argument>
                    <argument name="inlined" xsi:type="boolean">true</argument>
                    <argument name="lazy_loaded" xsi:type="boolean">false</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
